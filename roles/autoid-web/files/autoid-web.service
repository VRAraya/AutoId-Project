[Unit]
Description=AutoIndoorGarden Web
After=network.target

[Service]
Environment=NODE_ENV=production
Environment=API_ENDPOINT=http://api.autoindoorgarden.space
Environment=SERVER_HOST=http://autoindoorgarden.space
Environment=MQTT_HOST=mqtt://api.autoindoorgarden.space
Type=simple
User=root
WorkingDirectory=/usr/local/src/autoid-web
ExecStart=/usr/bin/npm start
Restart=on-failure

[Install]
WantedBy=multi-user.target